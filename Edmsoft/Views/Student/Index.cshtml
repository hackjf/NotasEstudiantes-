@model IEnumerable<Edmsoft.Models.StudentGrade>
@{
    ViewData["Title"] = "Index";
}

<div class="container-xl">
	<div class="table-responsive">
		<div class="table-wrapper">
			<div class="table-title">	
				<div class="row">
					<div class="col-sm-6">
						<h2>Lista de <b>estudiantes</b></h2>
					</div>
						<div class="col-sm-6">
							<a asp-action="Create" class="btn btn-success" ><i class="material-icons">&#xE147;</i> <span>Registrar estudiante</span></a>
						</div>
				</div>
			</div>
			<table class="table table-striped table-hover">
				<thead>
					<tr>						
						<th> @Html.DisplayNameFor(model => model.Id)</th>
						<th>@Html.DisplayNameFor(model => model.Nombre)</th>
						<th>@Html.DisplayNameFor(model => model.PrimerCorte)</th>
						<th>@Html.DisplayNameFor(model => model.SegundoCorte)</th>
						<th>@Html.DisplayNameFor(model => model.TercerCorte)</th>
						<th>@Html.DisplayNameFor(model => model.NotaFinal)</th>
						<th id="accionestilo"><label for="html">Acción</label></th>
					</tr>
				</thead>
					<tbody>
						@if (Model.ToList().Count > 0)
						{
							@foreach (var item in Model)
							{
								<tr>
									<td>
										@Html.DisplayFor(modelItem => item.Id)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Nombre)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.PrimerCorte)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.SegundoCorte)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.TercerCorte)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.NotaFinal)
									</td>
									<td>
										<button type="button" class="btn btn-outline-success  btn-sm">@Html.ActionLink("Actualizar", "Edit", new { id = item.Id })</button>
										<button type="button" class="btn btn-outline-info  btn-sm">@Html.ActionLink("Detallar", "Details", new { id = item.Id })</button>
										<button type="button" class="btn btn-outline-danger btn-sm"> @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })</button>
									</td>
								</tr>
							}
						}
						else
						{
							<tr>
								<td>
									<label name="NoRecord" class="control-label text-danger">No se encontraron registros de notas</label>
								</td>
							</tr>
						}
					</tbody>
			</table>
			<div class="clearfix">
				<div class="hint-text">Mostrando <b>x</b> de <b>x </b> registros</div>
				<ul class="pagination">
					<li class="page-item disabled"><a href="#">Anterior</a></li>
					<li class="page-item active"><a href="#" class="page-link">1</a></li>
					<li class="page-item"><a href="#" class="page-link">2</a></li>
					<li class="page-item"><a href="#" class="page-link">3</a></li>
					<li class="page-item"><a href="#" class="page-link">4</a></li>
					<li class="page-item"><a href="#" class="page-link">5</a></li>
					<li class="page-item"><a href="#" class="page-link">Siguiente</a></li>
				</ul>
			</div>
		</div>
	</div>        
</div>